# Apollo Configuration Example
# Copy this file to .env and modify the values according to your needs

###################
# Required Settings
###################

# Apollo Meta Server Address
# The URL of your Apollo configuration service
# Example: http://localhost:8080 or https://apollo.example.com
APOLLO_META_SERVER_ADDRESS=http://localhost:8080

# Apollo Application ID
# The unique identifier for your application in Apollo
# Example: your-app-id
APOLLO_APP_ID=your-app-id

###################
# Authentication
###################

# Whether to use authentication with app secret
# Set to true if your Apollo instance requires authentication
# Values: true or false
APOLLO_USING_APP_SECRET=false

# Apollo Application Secret
# Required only if APOLLO_USING_APP_SECRET is true
# Keep this secret and never commit it to version control
APOLLO_APP_SECRET=your-app-secret

###################
# Optional Settings
###################

# Apollo Cluster Name
# The cluster your application belongs to
# Default: default
APOLLO_CLUSTER=default

# Apollo Environment
# The environment your application runs in
# Common values: DEV, FAT, UAT, PRO
APOLLO_ENV=DEV

# Apollo Namespaces
# Comma-separated list of configuration namespaces to use
# Default: application
# Example: application,common,database
APOLLO_NAMESPACES=application

# Request Timeout
# Timeout in seconds for Apollo API requests
# Default: 10
APOLLO_TIMEOUT=10

# Configuration Refresh Cycle Time
# Time in seconds between configuration refresh attempts
# Default: 30
APOLLO_CYCLE_TIME=30

# Cache Directory Path
# Local directory to store cache files
# Optional: Leave empty to use system default
APOLLO_CACHE_FILE_DIR_PATH=

# Client IP Address
# Optional: Custom IP address for the client
# Leave empty to use system default
APOLLO_IP=